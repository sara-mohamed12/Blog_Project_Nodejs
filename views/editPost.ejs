<%- include('parts/header') %>

<section id="reg" class="py-5">
  <div class="container">
    <div<section id="reg" class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10 register p-4 ">
            <div class="borderHover">
              <h2 id="heading" class=" mt-3 text-center">Update Post</h2>
              <div class="hBorder m-auto"></div>
            </div>
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST" enctype="multipart/form-data" class="mt-4 px-4">
              <div class="form-group">
                <input type="text" name="title" placeholder="Title" class="form-control" value="<%= post.title %>">
              </div>
              <div class="form-group upload">
                <div class="custom-file">
                  <input type="file" name="photo" class="custom-file-input" id="customFile" accept="image/x-png,image/gif,image/jpeg,image/jpg" value="<%= post.photo %>">
                  <label class="custom-file-label" for="customFile">Choose image</label>
                </div>
              </div>
    
              <div class="form-group">
                <textarea name="content" placeholder="Content ................." class="form-control"><%= post.content %></textarea>
              </div>
    
              <div class="text-center">
                <button type="submit" class="btn  btn-outline btn-lg rounded-0 ">Update</button>
              </div>
            </form>
    
    
          </div>
          <div class="col-md-1"></div>
    
    
        </div>
      </div>
    </section>

<%- include('parts/footer') %>

