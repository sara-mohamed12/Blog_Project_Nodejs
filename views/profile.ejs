<!DOCTYPE html>
<%- include('parts/header') %>

<%- include('parts/navbar') %>

<section id="profile" class="py-5">
    <div class="container">
        <div class="card border-info mb-3">

            <div class="card-header text-center">
                <img src="images/profile.png" class="profileImg" alt="blog image">
            </div>
            <div class="card-body m-auto">
                <h5 class="card-title">Name: <span><%= user.firstname +" " + user.lastname %></span></h5>
                <h5 class="card-title">Email: <span><%= user.email %></span></h5>
                <div class="content">
                    <p class="card-title">posts: <span><%= posts.length %></span></p>
                    <p class="card-title">Following:<span><%= user.following.length %> </span></p>
                </div>
            </div>
            <%  if(posts.length > 0){%>
              <% posts.forEach(post =>{ %>
                <div class="card-footer bg-white">
                    <h4 class="m-2">Recent Posts:</h4>
                    <div class="card mb-4">
                        <div class="row no-gutters">
                            <div class="col-4 d-flex align-items-center justify-content-center">
                                <img src="<%=post.photo%>" class="card-img img-fluid mainImg" alt="blog image">
                            </div>
                            <div class="col-8">
                                <div class="card-body ">
                                    <h4 class="card-title"><%= post.title %></h4>
                                    <p class="card-text"><%= post.content %></p>
                                    <p class="text-muted"><%= post.createdAt %></p>


                                    <div class=" mt-3">
                                        <form  class="d-inline" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                                            <a href="posts/edit/<%=post._id%>" class="btn btn-primary  btn-outline btn-lg"> Edit</a>
                                            <button type="submit" class="btn btn-danger btn-outline btn-lg">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>
            <% } else { %> 
           </div>
           <h3 class="text-center alert alert-danger" > No Posts Available Now ..</h3>  <% } %>
    </div>
</section>
 
 
<%- include('parts/footer') %>