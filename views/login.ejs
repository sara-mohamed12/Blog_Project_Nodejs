<%- include('parts/header') %>
<%- include('parts/navbar') %>

<section id="reg" class="pt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10 register p-4">
                <div class="borderHover">
                    <h2 id="heading" class=" mt-3 text-center">Login here</h2>
                    <div class="hBorder m-auto"></div>
                </div>
                <form action="/auth/login" method="POST" class="mt-4 px-4">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control">
                    </div>
                    <div class="text-center">
                        <button id="addBtn" type="submit" class="btn  btn-outline btn-lg rounded-0 ">Login</button>
                    </div>
                    <div class="text-center mt-3 ask">
                        Don't have account ? <a href="index.html">rigester</a>
                    </div>
                </form>
                <% if(authError){ %>
                    <br>
                       <p class="alert alert-danger">
                           <%= authError %>
                       </p>
                <% } %>


            </div>
            <div class="col-md-1"></div>


        </div>
    </div>
</section>


<%- include('parts/footer') %>

