
<%- include('parts/header') %>
<section id="blog" class="py-5">
    <div class="container ">
        <div class="card mb-4">
         <% posts.forEach(post =>{ %>
            <div class="row no-gutters">
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img src="<%= post.photo%>" class="card-img img-fluid mainImg" alt="blog image">
                </div>
                <div class="col-md-8">
                    <div class="card-body mx-2 ">
                        <h4 class="card-title text-center"><%= post.title %></h4>
                        <p class="card-text"><%= post.content %></p>
                        <div class="row  m-2 py-2 border border-secondary">
                            <div class=" col-2 ">
                                <img src="images/profile.png" class="card-img img-fluid h-100" alt="blog image">
                            </div>
                            <div class=" col-10 mt-2 ">
                                <h5>by <%= post.author.firstname + " "+ post.author.lastname %></h5>
                                <p class="text-muted"><%= post.createdAt %></p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        <%})%>
        </div>


    </div>
</section>
 
<%- include('parts/footer') %>